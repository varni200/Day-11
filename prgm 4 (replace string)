#include <stdio.h>
#include <ctype.h>
void replacevowels(char *str){
    for(int i = 0; str[i] !='\0' ; ++i) {
        char ch = tolower(str[i]);
        if (ch == 'a' || ch == 'e' || ch =='i' || ch =='o' || ch == 'u'){
            str[i] = '*';
        }
    }
}
int main () {
    char str[1000];
    printf("Enter a string: ");
    fgets (str, sizeof(str), stdin);
    for (int i = 0; str[i]; i++) {
        if (str[i] == '\n') {
            str[i] = '\0';
            break;
        }
    }
replacevowels(str);
printf("Modified string: %s\n",str);
return 0;
}
